<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BattleshipClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BattleshipClone"
    Shell.FlyoutBehavior="Disabled"
    Title="BattleshipClone">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate local:Pages.MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Setup"
        ContentTemplate="{DataTemplate local:Pages.SetupPage}"
        Route="SetupPage" />

    <ShellContent
        Title="Battle"
        ContentTemplate="{DataTemplate local:Pages.BattlePage}"
        Route="GamePage" />

    <ShellContent
        Title="Load"
        ContentTemplate="{DataTemplate local:Pages.SavedGamesPage}"
        Route="LoadPage" />

    <ShellContent
        Title="Options"
        ContentTemplate="{DataTemplate local:Pages.OptionsPage}"
        Route="OptionsPage" />

</Shell>
